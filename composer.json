{
    "name": "faisal50x/xpiry",
    "description": "A simple tool can make your expire validation easier and faster",
    "keywords": [
        "faisal50x",
        "xpiry"
    ],
    "homepage": "https://github.com/faisal50x/xpiry",
    "license": "MIT",
    "authors": [
        {
            "name": "Faisal Ahmed",
            "email": "foysal20x@gmail.com",
            "homepage": "https://github.com/faisal50x",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "nesbot/carbon": "^2.43"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Faisal50x\\Xpiry\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Faisal50x\\Xpiry\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/spatie"
        },
        {
            "type": "other",
            "url": "https://spatie.be/open-source/support-us"
        }
    ]
}
